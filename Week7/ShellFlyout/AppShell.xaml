<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShellFlyoutExample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShellFlyoutExample"
    Title="ShellFlyoutExample"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="One">
        <ShellContent
        Title="One"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="OnePage" />
    </FlyoutItem>
    <FlyoutItem Title="Two">
        <ShellContent
        Title="Two"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="TwoPage" />
    </FlyoutItem>
    <FlyoutItem Title="Three">
        <ShellContent
        Title="Three"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="ThreePage" />
    </FlyoutItem>
    <FlyoutItem Title="Four">
        <ShellContent
        Title="Four"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="FourPage" />
    </FlyoutItem>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
