<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LectureAudioFile.MainPage"
              xmlns:local="clr-namespace:LectureAudioFile"
             x:DataType="local:MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25" x:Name="MainLayout">

            <Label
                x:Name="AudioState"
                Text="{Binding AudioStateText}"
                FontSize="32"/>
            <Button
                 Text="Start Dice Loop" 
                 Clicked="OnStartLoopClicked"
                 HorizontalOptions="Fill" />    
            <Button Text="StopLooping" Clicked="Button_Clicked"/>
            <Button Text="Stop Playing" Clicked="ButtonStop_Clicked"/>
            <Button Text="Pause Playing" Clicked="ButtonPause_Clicked"/>

            <Slider Maximum="1" Minimum="0" Value="{Binding Volume}" />


            <Button
                 Text="Pick Image File"
                 Clicked="PickImgButton_Clicked"
                 />
            <Button
                 Text="Pick Music File"
                 Clicked="PickButton_Clicked"
                 />
            <Label Text="{Binding PickedFileName}" 
                FontSize="18"
                HorizontalOptions="Center" />   

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
