<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToe2025.MainPage"
             Title="Tic Tac Toe 2025">

    <ScrollView>
        <VerticalStackLayout>
            <Label x:Name="whichplayerlabel" HorizontalOptions="Start"  Text="Click Start Game to Begin"/>
            <Grid x:Name="GridPageContent" BackgroundColor="CornflowerBlue"
                  HeightRequest="300" WidthRequest="300"
                  HorizontalOptions="Center" VerticalOptions="Center" 
                  RowSpacing="6" ColumnSpacing="6" Padding="6">
                <!-- Content added here at runtime -->

            </Grid>
            <HorizontalStackLayout HorizontalOptions="Center" x:Name="GridSizeStack">
                <Label Text="Size: " VerticalOptions="Center" />
                <Entry x:Name="GridSize" Placeholder="00" Keyboard="Numeric" Text="3" />
            </HorizontalStackLayout>
            <Button x:Name="StartBtn"  Text="Start Game" Clicked="StartBtn_Clicked" WidthRequest="150"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
