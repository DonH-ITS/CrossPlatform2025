<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week5Lecture.MainPage" Title="Week 5 Drawing">

    <ScrollView>
        <VerticalStackLayout>
            
            <Border StrokeThickness="5" HorizontalOptions="Center" BackgroundColor="LightGreen">
               <GraphicsView x:Name="DrawingCanvas" HeightRequest="300" WidthRequest="350" Background="Red">
            </GraphicsView>
            </Border>

            <Button Text="Clear Canvas" WidthRequest="100" Clicked="Button_Clicked"/>
            <Button Text="Draw Circle" WidthRequest="100" Clicked="Circle_Clicked"/>
            <Button Text="Draw Rectangle" WidthRequest="100" Clicked="DrawRectangle_Clicked"/>
            <Label Text="Width"/>
            <Entry Text="100" x:Name="WidthRect" Placeholder="Width"/>
            <Label Text="Height"/>
            <Entry Text="100" x:Name="HeightRect" Placeholder="Height"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
